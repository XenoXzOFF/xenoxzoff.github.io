<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Organigramme | Paname Sud</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container animate-in">
        <div class="hero-container" style="text-align: center; margin-bottom: 50px;">
            <p class="hero-subtitle-elite">Structure Officielle</p>
            <h1 class="hero-title">ORGANIGRAMME</h1>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(450px, 1fr)); gap: 25px;">
            <% for (const [id, data] of Object.entries(effectif)) { %>
                <div class="main-card" style="padding: 30px;">
                    <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid var(--border); padding-bottom: 15px; margin-bottom: 15px;">
                        <h3 style="color: var(--gold); font-family: 'Montserrat'; font-size: 0.9rem; letter-spacing: 2px; text-transform: uppercase;">
                            <%= data.label %>
                        </h3>
                        <span class="status-badge <%= data.membres.length >= data.quota && data.quota !== Infinity ? 'status-refuse' : 'status-revision' %>">
                            <%= data.membres.length %> / <%= data.quota === Infinity ? '∞' : data.quota %>
                        </span>
                    </div>
                    
                    <div style="display: flex; flex-wrap: wrap; gap: 8px;">
                        <% if (data.membres.length > 0) { %>
                            <% data.membres.forEach(nom => { %>
                                <div style="background: rgba(255,255,255,0.03); border: 1px solid var(--border); padding: 8px 15px; border-radius: 6px; font-size: 0.8rem; color: #fff;">
                                    <%= nom %>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <span style="color: var(--text-mid); font-size: 0.75rem; font-style: italic; opacity: 0.5;">Aucun personnel affecté</span>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <footer style="text-align: center; padding: 60px; color: var(--gold-dark); font-size: 0.7rem; letter-spacing: 2px; opacity: 0.5;">
        &copy; COLLÈGE PRIVÉ PANAME SUD - DOCUMENT OFFICIEL
    </footer>
</body>
</html>